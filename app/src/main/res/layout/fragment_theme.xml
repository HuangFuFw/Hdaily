<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/titleBlue"
        android:paddingTop="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ailk.hf.hdaily.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_empty_followers">
            </com.ailk.hf.hdaily.widget.CircleImageView>

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="请登录"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/commonTxt"
                android:id="@+id/txt_drawer_UserProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_notification_love"
                android:drawablePadding="@dimen/margin_10"
                android:layout_weight="1"
                android:text="我的收藏" />

            <TextView
                style="@style/commonTxt"
                android:id="@+id/txt_drawer_OfflineDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_drawer_collect_pressed"
                android:drawablePadding="@dimen/margin_10"
                android:layout_weight="1"
                android:text="离线下载" />
        </LinearLayout>
    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_weight="4"-->
        <!--android:background="#fff"-->
        <!--android:choiceMode="singleChoice"-->
        <!--android:divider="@null"-->
        <!--android:scrollbars="none"></android.support.v7.widget.RecyclerView>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_theme_menu"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:background="@color/white"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
