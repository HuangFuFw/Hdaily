<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF03A9FF</item>
        <item name="colorPrimaryDark">#FF0288F1</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <!--toolbar DrawerArrowToggle图标颜色-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--toolbar 溢出菜单更换图标-->
    <style name="Theme.ToolBar.ActionSetting" parent="AppTheme.Base">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
    </style>
    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>

    <!--基础TextView-->
    <style name="commonTxt">
        <item name="android:textSize">@dimen/main_drawer_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
